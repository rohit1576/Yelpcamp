<% include ../partial/header.ejs%>

<div class = "container">
    <div class="row">
        <div class="col-md-3">
            <p class = "lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
               <img class="img-responsive"src="<%=campground.image%>">
               <div class="caption-full">
                   <h4 class="pull-right">â‚¹<%=campground.price%>/night</h4>
                   <h4><%=campground.name%></h4>
                   <p><%=campground.description%></p>
                    <p>Created by <%=campground.author.username%></p>
                    <%if(currentUser && campground.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-success" href="/campground/<%=campground._id%>/edit">Edit Campground</a>
               
               
                <form id="delete" action="/campground/<%= campground._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete!</button>
                </form>
               
            </div>
            </div>
             <%}%>
            <div class="well">
                <div class="text-right">  
                    <a class="btn btn-success" href="/campground/<%=campground._id%>/comments/new">Create New Comment!</a>
                </div>
                <hr>
                
                <%for(var i=0;i<campground.comments.length;i++){%>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%=campground.comments[i].author.username%></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                        <%=campground.comments[i].text%>
                        </p>
                        <%if(currentUser && campground.comments[i].author.id.equals(currentUser._id)){%>
                        <a class="btn btn-success" href="/campground/<%=campground._id%>/comments/<%=campground.comments[i]._id%>/edit">Edit!</a>
                        
                        <form id="delete" action="/campground/<%= campground._id %>/comments/<%=campground.comments[i]._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete!</button>
                        </form>
                        <%}%>
                        
                       
                    </div>
                    
                </div>
                
                <%}%>

            </div>
        </div>
    </div>
</div>

<% include ../partial/footer.ejs %>